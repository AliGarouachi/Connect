{% extends 'base.html.twig' %}

{% block body %}
    <h1>Accounts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Qrstring</th>
                <th>Numberaccess</th>
                <th>Expirationdate</th>
                <th>Receivingdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td><a href="{{ path('accounts_show', { 'id': account.id }) }}">{{ account.id }}</a></td>
                <td>{{ account.amount }}</td>
                <td>{{ account.qrstring }}</td>
                <td>{{ account.numberaccess }}</td>
                <td>{% if account.expirationdate %}{{ account.expirationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if account.receivingdate %}{{ account.receivingdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('accounts_show', { 'id': account.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('accounts_edit', { 'id': account.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('accounts_new') }}">Create a new account</a>
        </li>
    </ul>
{% endblock %}
