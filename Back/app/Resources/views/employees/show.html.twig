{% extends '@SbSAdminLTE/Layout/base.html.twig' %}
{% block title %}Employee{% endblock %}
{% block admin_lte_logo %}
                    <a href="" class="logo">
                        <span class="logo-mini"><b>C</b>NT</span>
                        <span class="logo-lg"><b>C</b>onnecti</span>
                    </a>
{% endblock %}
{% block admin_lte_sidebar %}
 
<ul class="sidebar-menu tree" data-widget="tree">
        <li class="header">MAIN NAVIGATION</li>
        <li><a href="{{ path('product_index') }}"><i class="fa fa-product-hunt"></i> <span>Products</span></a></li>
        <li><a href="{{ path('employees_index') }}"><i class="fa fa-users text-yellow"></i> <span>Employees</span></a></li>
        <li><a href="{{ path('transactions_index') }}"><i class="fa fa-credit-card-alt text-green"></i> <span>Transactions</span></a></li>
        <li><a href="{{ path('clients_index') }}"><i class="fa fa-user-circle-o text-aqua"></i> <span>Clients</span></a></li>
        <li><a href="{{ path('accounts_index') }}"><i class="fa fa-circle-o text-red    " aria-hidden="true"></i> <span>Accounts</span></a></li>
                   
{% endblock %}
{% block header_content %}{% endblock %}
{% block page_content %}
    <h1>Employee</h1>

    <table class="table table-bordered table-hover dataTable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ employee.cin }}</td>
            </tr>
            <tr>
                <th>Giveaccess</th>
                <td>
                    {% if employee.giveaccess %}
                        oui
                    {% else %}
                        non
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Payment</th>
                <td>
                
                {% if employee.payment %}
                    oui
                {% else %}
                    non
                {% endif %}
                
                </td>
            </tr>
            <tr>
                <th>Transfert</th>
                <td>
                    {% if employee.transfert==1 %}
                        oui
                    {% else %}
                        non
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Verifyaccess</th>
                <td>
                    {% if employee.verifyaccess %}
                        oui
                    {% else %}
                        non
                    {% endif %}
                
                </td>
            </tr>
        </tbody>
    </table>

    <div class="col-md-2 pull-right">
<table class ="table table-bordered text-center">
<tbody>
    <tr>
    <td>
            <a href="{{ path('employees_index') }}" class="btn btn-info">Back to the list</a>
        </td>
        
     <td> 
            <a href="{{ path('employees_edit', { 'id': employee.id }) }}" class="btn btn-warning">Edit</a>
        </td>
     <td>   
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger ">
            {{ form_end(delete_form) }}
        </td>
     </tr>   
    </tbody>
    </table>
    </div>
{% endblock %}
