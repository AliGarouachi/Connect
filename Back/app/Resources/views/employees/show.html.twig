{% extends '@SbSAdminLTE/Layout/base.html.twig' %}

{% block page_content %}
    <h1>Employee</h1>

    <table class="table table-bordered table-hover dataTable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ employee.cin }}</td>
            </tr>
            <tr>
                <th>Giveaccess</th>
                <td>{{ employee.giveaccess }}</td>
            </tr>
            <tr>
                <th>Payment</th>
                <td>{{ employee.payment }}</td>
            </tr>
            <tr>
                <th>Transfert</th>
                <td>{{ employee.transfert }}</td>
            </tr>
            <tr>
                <th>Verifyaccess</th>
                <td>{{ employee.verifyaccess }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-md-2 pull-right">
<table class ="table table-bordered text-center">
<tbody>
    <tr>
    <td>
            <a href="{{ path('employees_index') }}" class="btn btn-info">Back to the list</a>
        </td>
        
     <td> 
            <a href="{{ path('employees_edit', { 'id': employee.id }) }}" class="btn btn-warning">Edit</a>
        </td>
     <td>   
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger ">
            {{ form_end(delete_form) }}
        </td>
     </tr>   
    </tbody>
    </table>
    </div>
{% endblock %}
