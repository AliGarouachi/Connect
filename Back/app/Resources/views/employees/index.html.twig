{% extends '@SbSAdminLTE/Layout/base.html.twig' %}

{% block page_content %}
    <h1>Employees list</h1>
    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-app" style="float: right;">
        <i class="fa fa-plus"></i>Add Employee</a>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Responsive Hover Table</h3>

                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input class="form-control pull-right" name="table_search" placeholder="Search" type="text">

                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">

                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Cin</th>
                                <th>Giveaccess</th>
                                <th>Payment</th>
                                <th>Transfert</th>
                                <th>Verifyaccess</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>
                                        <a href="{{ path('employees_show', { 'id': employee.id }) }}">{{ employee.id }}</a>
                                    </td>
                                    <td>{{ employee.firstName }}</td>
                                    <td>{{ employee.lastName }}</td>
                                    <td>{{ employee.cin }}</td>
                                    <td>
                                        {% if employee.giveaccess %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if employee.payment %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if employee.transfert==1 %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if employee.verifyaccess %}
                                            oui
                                        {% else %}
                                            non
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('employees_show', { 'id': employee.id }) }}" class="btn btn-primary">show</a>
                                            <button aria-expanded="false" class="btn btn-info dropdown-toggle" data-toggle="dropdown" type="button">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    <a href="{{ path('employees_show', { 'id': employee.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('employees_edit', { 'id': employee.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>


{% endblock %}
