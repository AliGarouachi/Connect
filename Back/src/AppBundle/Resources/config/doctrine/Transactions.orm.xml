<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Transactions" table="transactions">
    <indexes>
      <index name="FK_Client" columns="idClient"/>
      <index name="FK_Employee" columns="idEmployee"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="date" type="datetime" column="Date" nullable="false"/>
    <field name="amount" type="integer" column="amount" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="idclient" target-entity="Clients" fetch="LAZY">
      <join-columns>
        <join-column name="idClient" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idemployee" target-entity="Employees" fetch="LAZY">
      <join-columns>
        <join-column name="idEmployee" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
